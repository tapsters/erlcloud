%% -*- mode: erlang;erlang-indent-level: 4;indent-tabs-mode: nil -*-
{erl_opts,
 [debug_info,
  %% warnings_as_errors, % disabled due to disabled function
  strict_validation,
  warn_bif_clash,
  warn_deprecated_function,
  warn_export_all,
  warn_export_vars,
  warn_exported_vars,
  warn_obsolete_guard,
  warn_shadow_vars,
  warn_unused_import,
  warn_unused_function,
  warn_unused_record,
  warn_unused_vars]}.

{deps, [
 {jsx,    ".*", {git, "git://github.com/talentdeficit/jsx.git", {tag, "2.8.0"}}},
 {lhttpc, ".*", {git, "git://github.com/erlcloud/lhttpc",       {tag, "1.4.0"}}}
]}.
